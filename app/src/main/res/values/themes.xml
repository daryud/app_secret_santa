    <style name="Theme.AmigoOculto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_3</item>
        <item name="colorPrimaryVariant">@color/blue_4</item>
        <item name="colorOnPrimary">@color/gray_10</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/ThreeDotsMenuColor</item>
    </style>

    <style name="ThreeDotsMenuColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/gray_10</item>
    </style>
</resources>